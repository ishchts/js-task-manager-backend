extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th= t('views.user.id')
        th= t('views.user.fullName')
        th= t('views.user.email')
        th= t('views.user.createdAt')
        th= t('views.user.actions')
    tbody
      each user in users
        tr
          td= user.id
          td= `${user.firstName} ${user.lastName}`
          td= user.email
          td= formatDate(user.createdAt)
          td
            div.d-flex.flex-wrap
              a.btn.btn-primary.me-1(href=`/users/${user.id}/edit`)= t('views.user.editBtn')
              +buttonTo(`/users/${user.id}/delete`, 'delete')(class="btn btn-danger" value=t('views.user.deleteBtn'))